
<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <center>
    <div class="col-xs-10">

<h1>Listing Classrooms</h1>

<table class="rwd-table">

    <tr>
      <th>ClassName</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.name %></td>
        <td><%#= link_to 'Show', classroom %></td>
         <td><%= link_to 'View Terms', classroom_terms_path(classroom, @term) %></td>
        <td><%= link_to 'Edit', edit_classroom_path(classroom) %></td>
        <td><%= link_to 'Destroy', classroom, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</center>

 <div class="col-xs-2">
<%= link_to '<i class="glyphicon, glyphicon-plus"></i> New Classroom'.html_safe, new_classroom_path, class: 'btn btn-default btn-lg' %>

    
  </div>
</div>
